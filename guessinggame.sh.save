#!/bin/bash
echo "Can you guess how many files are in the current directory?"
read var_enteredqty
an $var_enteredqty"
var_guessit=1
var_insidefiles=$(ls | wc -l)
echo "Files in folder $var_insidefiles -- $var_guessit"

function validate_guess {
	echo "Inside function $var_guessit"
	if [[ $1 -eq $var_insidefiles ]]
	then
		echo "Congratulations, your guess $1 was correct"
		var_guessit=0
	elif [[ $1 -gt $var_insidefiles ]]
	then
		echo "Your guess $1 was too high, please try again:"
		read var_enteredqty
	else
                echo "Your guess $1 was too low, please try again:"
                read var_enteredqty
	fi
echo "You entered $var_enteredqty and the corret answer was $var_insidefiles -- $var_guessit"

}


while [[ var_guessit -eq 1 ]]
do
	echo "inside while "
	validate_guess $var_enteredqty
done
